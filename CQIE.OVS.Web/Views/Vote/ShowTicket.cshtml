
@{
    Layout = null;
    CQIE.OVS.Domain.Player playerone = ViewBag.PlayerOne;
    CQIE.OVS.Domain.Player playertwo = ViewBag.PlayerTwo;
    CQIE.OVS.Domain.PKInfo pkinfo = ViewBag.PKInfo;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <style>
        #playerimg {
            margin: 10px auto;
            width: 320px;
            height: 320px;
        }
        #playerimg img {
                border-radius: 50%;
                width: 100%;
                height: 100%;
            }
        body {
            background-image: url('../../Content/playerImage/background.png');
            background-repeat: no-repeat;
            background-size: 100% auto;
        }
        /*#playerOne, #playerTwo, img {
            float: left;
        }*/

        #playerOne {
            text-align: center;
            margin-top: 300px;
            position: absolute;
            left: 20px;
        }
        #playerTwo {
            text-align: center;
            margin-top: 300px;
            position: absolute;
            right: 20px;
        }

        a {
            color: white;
        }

        .ellipse{
            margin-left: 100px;
            width:100px;
            height:100px;
            border:solid 0.5px black;
            background: #ff1e07;
            border-radius: 50px;
            transform: rotateX(70deg);
        }
        .ellipse:after{
            content: '';
            display:inline-block;
            width:100px;
            height: 250px;
            position:relative;
            opacity: 0.6;
            background: #ff1e07;
            top:50%;
            left:-0.5px;
            border-left:black 0.5px solid;	
            border-right:black 0.5px solid;
            border-bottom: black 0.5px solid;
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
        }
        #tp{
            width:25px;
            height:25px;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            window.setInterval(function GetResult() {              
                $.get("/Vote/GetTicket", {}, function (rv) {
                    $("#PlayerOneTicket a").html(rv.FirstPlayersScore);
                    $("#PlayerTwoTicket a").html(rv.SecondPlayersScore);
                })
            }, 300);
        })      
    </script>
</head>
<body>

    <div id="playerOne">
        <div id="playerimg"><img src="@playerone.PictureUrl" /></div>
        <div><a>@playerone.Name</a></div>
        <br />       
        <div id="PlayerOneTicket"><img id="tp" src="~/Content/playerImage/投票 .png" /><a>@pkinfo.PlayerOneTicket</a></div>
        <div class="ellipse"></div>

       
    </div>   
   

    @*<img src="~/Content/playerImage/timg.png" />*@
    <div id="playerTwo">
        <div id="playerimg"><img src="@playertwo.PictureUrl" /></div>
        <div><a>@playertwo.Name</a></div>
        <br />
        
        <div id="PlayerTwoTicket"><img id="tp" src="~/Content/playerImage/投票 .png" /><a>@pkinfo.PlayerTwoTicket</a></div>
        <div class="ellipse"></div>       
        
    </div>

</body>
</html>


